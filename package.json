{
  "name": "simple-nodejs-password",
  "version": "0.1.0",
  "description": "A lightweight password manager for NodeJS applications",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "build": "tsc",
    "test": "ava",
    "test:coverage": "nyc ava --timeout=3000",
    "format": "prettier --write .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepare": "husky install",
    "pre-commit": "lint-staged"
  },
  "keywords": [
    "nodejs",
    "passwords",
    "hashing",
    "crypto"
  ],
  "author": "Jessie France (https://github.com/jessiefrance)",
  "license": "MIT",
  "bugs": "https://github.com/JessieFrance/shelljs-plugin-help/issues",
  "homepage": "https://github.com/JessieFrance/shelljs-plugin-help",
  "devDependencies": {
    "@types/node": "^17.0.21",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.13.0",
    "ava": "^4.0.1",
    "eslint": "^8.10.0",
    "eslint-config-airbnb-typescript-prettier": "^5.0.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.4",
    "nyc": "^15.1.0",
    "prettier": "^2.5.1",
    "ts-node": "^10.6.0",
    "typescript": "4.5"
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "lint-staged": {
    "*.{js,json,md}": "prettier --write"
  },
  "engines": {
    "node": ">=12"
  }
}
